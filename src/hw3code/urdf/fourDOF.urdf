<?xml version="1.0"?>

<robot name="FourDOF">

  <!-- *************************************************** -->
  <!-- ***************** Kinematic Chain ***************** -->
  <!-- *************************************************** -->
  <!-- <link name="..."> is really a frame!                -->
  <!-- <joint name="..." type="fixed">      is a fixed shift.    -->
  <!-- <joint name="..." type="continuous"> is a revolute joint. -->
  <!-- <joint name="..." type="prismatic">  is a linear   joint. -->
  <!-- Note the 'origin' tag in the joints defines the shift and
       reorientation, i.e. the transform.  For moving joints, this
       happens before the continuous joint rotates around 'axis'. -->

  <link name="world"/>
  <joint name="joint_0_to_0p" type="fixed">
    <parent link="world"/>
    <child link="link_0p"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>
  <link name="link_0p"/>
  <joint name="theta_1" type="revolute">
    <parent link="link_0p"/>
    <child link="link_1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="1" velocity="1"/>
  </joint>
  <link name="link_1"/>
  <joint name="joint_1_to_1p" type="fixed">
    <parent link="link_1"/>
    <child link="link_1p"/>
    <origin xyz="0 0.2 0.2" rpy="0 0 0"/>
  </joint>
  <link name="link_1p"/>
  <joint name="theta_2" type="revolute">
    <parent link="link_1p"/>
    <child link="link_2"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="1" velocity="1"/>
  </joint>
  <link name="link_2"/>
  <joint name="joint_2_to_2p" type="fixed">
    <parent link="link_2"/>
    <child link="link_2p"/>
    <origin xyz="0 0.2 -0.2" rpy="0 0 0"/>
  </joint>
  <link name="link_2p"/>
  <joint name="theta_3" type="revolute">
    <parent link="link_2p"/>
    <child link="link_3"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 -1"/>
    <limit lower="-3.14" upper="3.14" effort="1" velocity="1"/>
  </joint>
  <link name="link_3"/>
  <joint name="joint_3_to_3p" type="fixed">
    <parent link="link_3"/>
    <child link="link_3p"/>
    <origin xyz="0 0.2 -0.2" rpy="0 0 0"/>
  </joint>
  <link name="link_3p"/>
  <joint name="theta_4" type="revolute">
    <parent link="link_3p"/>
    <child link="link_4"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="1" velocity="1"/>
  </joint>
  <link name="link_4"/>
  <joint name="attachtip" type="fixed">
    <parent link="link_4"/>
    <child link="tip"/>
    <origin xyz="0 0.2 0" rpy="0 0 0"/>
  </joint>
  <link name="tip"/>

  <!-- *************************************************** -->
  <!-- ****************** Named Colors ******************* -->
  <!-- *************************************************** -->

  <material name="white">    <color rgba="1.00 1.00 1.00 1"/>  </material>
  <material name="gray">     <color rgba="0.60 0.60 0.60 1"/>  </material>
  <material name="table">    <color rgba="0.85 0.77 0.77 1"/>  </material>
  <material name="black">    <color rgba="0.00 0.00 0.00 1"/>  </material>

  <material name="red">      <color rgba="1.00 0.00 0.00 1"/>  </material>
  <material name="green">    <color rgba="0.00 1.00 0.00 1"/>  </material>
  <material name="blue">     <color rgba="0.00 0.00 1.00 1"/>  </material>

  <material name="cyan">     <color rgba="0.00 1.00 1.00 1"/>  </material>
  <material name="magenta">  <color rgba="1.00 0.00 1.00 1"/>  </material>
  <material name="yellow">   <color rgba="1.00 1.00 0.00 1"/>  </material>

  <material name="orange">   <color rgba="1.00 0.65 0.00 1"/>  </material>


  <!-- *************************************************** -->
  <!-- *********** Additional Visual Elements ************ -->
  <!-- *************************************************** -->

</robot>
